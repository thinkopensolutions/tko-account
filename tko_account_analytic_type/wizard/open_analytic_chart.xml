<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_chart_type" model="ir.ui.view">
            <field name="name">open.analytic.account.type.form</field>
            <field name="model">open.analytic.type.account</field>
            <field name="arch" type="xml">
                <form string="Account charts">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Open Charts" name="account_chart_open_type_window" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_analytic_account_type_chart" model="ir.actions.act_window">
            <field name="name">Analytic Type Accounts Heirarchy</field>
            <field name="res_model">open.analytic.type.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_chart_type"/>
            <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_INDENT" action="action_analytic_account_type_chart"
            id="menu_action_analytic_account_chart_type"
            parent="account.menu_finance_entries" sequence="20" />
            
        


    </data>
</odoo>
